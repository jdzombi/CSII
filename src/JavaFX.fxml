<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <children>
      <VBox prefHeight="373.0" prefWidth="596.0">
         <children>
            <BorderPane prefHeight="397.0" prefWidth="596.0">
               <center>
                  <TextArea fx:id="dialogue" editable="false" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <TextField fx:id="inputField" onAction="#inputTextHandler" promptText="&gt;" text="&gt;" BorderPane.alignment="CENTER" />
               </bottom>
               <top>
                  <TextField fx:id="scoreField" editable="false" text="Score:" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="Lucida Console" size="12.0" />
                     </font>
                  </TextField>
               </top>
            </BorderPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
